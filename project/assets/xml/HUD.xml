<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <screen id="HUD">
        <layer id="hpBars" backgroundColor="#0000" childLayout="absolute">
            <panel id="healthBarZero" visible="false" padding="2px" backgroundColor="#0000" valign="top" width="50px" height="15px" childLayout="center">
                <panel id="0" backgroundColor="#0B0A" width="0" height="100%" valign="center" align="center">
                    <effect>
                        <onActive name="border" border="1px" color="BBB2" timeType="infinite" />
                        <onActive name="fade" start="#00" end="#FF" />
                    </effect>
                </panel>
            </panel>
            <panel id="healthBarOne" visible="false" padding="2px" backgroundColor="#0000" valign="top" width="50px" height="15px" childLayout="center">
                <panel id="1" backgroundColor="#0B0A" width="0" height="100%" valign="center" align="center">
                    <effect>
                        <onActive name="border" border="1px" color="BBB2" timeType="infinite" />
                        <onActive name="fade" start="#00" end="#FF" />
                    </effect>
                </panel>
            </panel>
            <panel id="healthBarTwo" visible="false" padding="2px" backgroundColor="#0000" valign="top" width="50px" height="15px" childLayout="center">
                <panel id="2" backgroundColor="#0B0A" width="0" height="100%" valign="center" align="center">
                    <effect>
                        <onActive name="border" border="1px" color="BBB2" timeType="infinite" />
                        <onActive name="fade" start="#00" end="#FF" />
                    </effect>
                </panel>
            </panel>
            <panel id="healthBarThree" visible="false" padding="2px" backgroundColor="#0000" valign="top" width="50px" height="15px" childLayout="center">
                <panel id="3" backgroundColor="#0B0A" width="0" height="100%" valign="center" align="center">
                    <effect>
                        <onActive name="border" border="1px" color="BBB2" timeType="infinite" />
                        <onActive name="fade" start="#00" end="#FF" />
                    </effect>
                </panel>
            </panel>
        </layer>
        <layer id="statusBox" backgroundColor="#0000" childLayout="center">
		<panel id="statusMessage" backgroundColor="#777A" width="60%" height="10%" valign="bottom" childLayout="vertical" align="center">
			<text id="statusM1" font="console.fnt" text=" " textHAlign="left" wrap="true" width="100%" height="25%"/> 
			<text id="statusM2" font="console.fnt" text=" " textHAlign="left" wrap="true" width="100%" height="25%"/> 
			<text id="statusM3" font="console.fnt" text=" " textHAlign="left" wrap="true" width="100%" height="25%"/> 
			<text id="statusM4" font="console.fnt" text=" " textHAlign="left" wrap="true" width="100%" height="25%"/> 
			<text id="statusM5" font="console.fnt" text=" " textHAlign="left" wrap="true" width="100%" height="25%"/>
			<text id="statusM6" font="console.fnt" text=" " textHAlign="left" wrap="true" width="100%" height="25%"/>  
		</panel>
	</layer>
    </screen>
    <screen id="pause">
        <layer childLayout="center" width="100%" height="100%" backgroundColor="#1112">
            <text font="Interface/Fonts/Default.fnt" text="Game Paused" color="#AA3A" />
        </layer>
    </screen>
</nifty>
