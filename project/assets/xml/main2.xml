<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://niftygui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <screen id="blank" backgroundColor="#0000"></screen>
    <screen id="countdown" childLayout="center">
        <layer id="counter" childLayout="center">
            <effect>
                <onEndScreen name="fade" start="#FF" end="#00" />
                <onStartScreen name="fade" start="#00" end="#FF" />
            </effect>
            <image id="5" filename="svg/counter5.png" />
            <image id="4" filename="svg/counter4.png" visible="false" />
            <image id="3" filename="svg/counter3.png" visible="false" />
            <image id="2" filename="svg/counter2.png" visible="false" />
            <image id="1" filename="svg/counter1.png" visible="false" />
            <image id="0" filename="svg/counter0.png" visible="false" />
        </layer>
    </screen>
    <screen id="join" backgroundColor="00CF">
        <layer id="joinCams" childLayout="absolute">
            <effect>
                <onEndScreen name="fade" start="#FF" end="#00" />
                <onStartScreen name="fade" start="#00" end="#FF" />
            </effect>
            <image id="join0" filename="svg/join0.png" visible="true" x="5%" y="5%" />
            <image id="leave0" filename="svg/leave0.png" visible="false" x="5%" y="5%" />
                
            <image id="join1" filename="svg/join1.png" inset="43%" visible="true" x="69.5%" y="50%" />
            <image id="leave1" filename="svg/leave1.png" inset="46%" visible="false" x="69.5%" y="50%" />
                
            <image id="join2" filename="svg/join2.png" inset="43%" visible="true" x="-17%" y="50%" />
            <image id="leave2" filename="svg/leave2.png" inset="46%" visible="false" x="-17%" y="50%" />
                
            <image id="join3" filename="svg/join3.png" inset="43%" visible="true" x="69.5%" y="-20%" />
            <image id="leave3" filename="svg/leave3.png" inset="46%" visible="false" x="69.5%" y="-20%" />
        </layer>
        <layer id="startGame" childLayout="center" >
            <image id="space" filename="svg/space.png" visible="false">
                <effect>
                    <onEndScreen name="fade" start="#FF" end="#00" />
                    <onStrartScreen name="fade" start="#00" end="#FF" />
                </effect>    
            </image>
        </layer>
    </screen>
</nifty>
