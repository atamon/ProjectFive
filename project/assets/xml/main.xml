<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://niftygui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useControls filename="nifty-default-controls.xml" />
    <useStyles filename="nifty-default-styles.xml" />
    <screen id="join" controller="view.JoinScreen" backgroundColor="00CF">
        <!--<layer id="battlefieldShadow" backgroundColor="#0008"></layer>-->
        <layer id="joinCams" childLayout="vertical">
            <panel id="joinCamsUpper" valign="top" childLayout="horizontal" width="100%" height="45%">
                <panel padding="12%" width="50%" height="100%" align="left" childLayout="center">
                    <panel id="joinCamZero" width="100%" height="100%" align="center" childLayout="center">
                        <text id="joinTextZero" font="aurulent-sans-16.fnt" color="#000C" text="Press Key to Join" />
                        <effect>
                            <onActive name="border" border="5px" color="#000D" timeType="infinite" />
                        </effect>
                    </panel>
                </panel>
                <panel padding="12%" width="50%" height="100%" align="left" childLayout="center">
                    <panel id="joinCamOne" width="100%" height="100%" align="center" childLayout="center">
                        <text id="joinTextZero" font="aurulent-sans-16.fnt" color="#000C" text="Press Key to Join" />
                        <effect>
                            <onActive name="border" border="5px" color="#000D" timeType="infinite" />
                        </effect>
                    </panel>
                </panel>        
            </panel>
            <panel id="joinCamsLower" valign="top" childLayout="horizontal" width="100%" height="45%">
                <panel padding="12%" width="50%" height="100%" align="left" childLayout="center">
                    <panel id="joinCamTwo" width="100%" height="100%" align="center" childLayout="center">
                        <text id="joinTextZero" font="aurulent-sans-16.fnt" color="#000C" text="Press Key to Join" />
                        <effect>
                            <onActive name="border" border="5px" color="#000D" timeType="infinite" />
                        </effect>
                    </panel>
                </panel>
                <panel padding="12%" width="50%" height="100%" align="left" childLayout="center">
                    <panel id="joinCamThree" width="100%" height="100%" align="center" childLayout="center">
                        <text id="joinTextZero" font="aurulent-sans-16.fnt" color="#000C" text="Press Key to Join" />
                        <effect>
                            <onActive name="border" border="5px" color="#000D" timeType="infinite" />
                        </effect>
                    </panel>
                </panel>        
            </panel>
        </layer>
        <layer id="settingsLayerRight" childLayout="vertical" backgroundColor="#0000">
            <panel paddingTop="80%" paddingLeft="10%" align="left" width="50%" height="100%" backgroundColor="#0000" childLayout="center">
                <panel id="settingsButton" width="75px" height="20px" align="left" backgroundColor="#0F0A">
                
                </panel> 
            </panel>
        </layer>
        <layer id="settingsLayerLeft" childLayout="vertical" backgroundColor="#0000">
            <panel paddingTop="80%" paddingRight="10%" align="right" width="50%" height="100%" backgroundColor="#0000" childLayout="center">
                <panel id="exitButton" width="75px" height="20px" align="right" backgroundColor="#F00A">
                
                </panel> 
            </panel>
        </layer>
    </screen>
</nifty>
