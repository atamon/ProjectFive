<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://niftygui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <screen id="blank" backgroundColor="#0000"></screen>
    <screen id="join" backgroundColor="00CF">
        <layer id="joinCams" childLayout="absolute">
            <effect>
                <onEndScreen name="fade" start="#FF" end="#00" />
                <onStartScreen name="fade" start="#00" end="#FF" />
            </effect>
            <image id="join0" width="50px" height="50px" filename="xml/join0.png" visible="true" x="5%" y="5%" />
            <image id="leave0" width="50px" height="50px" filename="xml/leave0.png" visible="false" x="5%" y="5%" />
                
            <image id="join1" width="50px" height="50px" filename="xml/join1.png" visible="true" x="90%" y="80%" />
            <image id="leave1" width="50px" height="50px" filename="xml/leave1.png" visible="false" x="90%" y="80%" />
                
            <image id="join2" width="50px" height="50px" filename="xml/join2.png" visible="true" x="5%" y="80%" />
            <image id="leave2" width="50px" height="50px" filename="xml/leave2.png" visible="false" x="5%" y="80%" />
                
            <image id="join3" width="50px" height="50px" filename="xml/join3.png" visible="true" x="90%" y="5%" />
            <image id="leave3" width="50px" height="50px" filename="xml/leave3.png" visible="false" x="90%" y="5%" />
        </layer>
        <layer id="startGame" childLayout="center" >
            <image id="space" filename="xml/space.png" visible="false">
                <effect>
                    <onEndScreen name="fade" start="#FF" end="#00" />
                    <onStrartScreen name="fade" start="#00" end="#FF" />
                </effect>    
            </image>
        </layer>
    </screen>
</nifty>
